boolean esExterno(String enlace) { 
  var BARRA_INCLINADA = '/';
  var primerCaracterDelEnlace = enlace.charAt(0);
  var esExterno = ( primerCaracterDelEnlace != (BARRA_INCLINADA) );
  return esExterno;
}
